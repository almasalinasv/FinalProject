<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/tvNamet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de usuario:"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toLeftOf="@id/tvName"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvNamet"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvLevelt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel de comprador:"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvLevel"/>
    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvLevelt"
        />

    <TextView
        android:id="@+id/tvDatet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de registro"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLevelt"
        app:layout_constraintRight_toLeftOf="@id/tvDate"/>
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvDatet"
        app:layout_constraintTop_toBottomOf="@id/tvLevel"/>
    <TextView
        android:id="@+id/tvPhonet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de teléfono"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvPhone"
        app:layout_constraintTop_toBottomOf="@id/tvDatet"/>
    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvPhonet"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        />
    <TextView
        android:id="@+id/tvEmailt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo electrónico"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPhonet"
        app:layout_constraintRight_toLeftOf="@id/tvEmail"/>
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPhone"
        app:layout_constraintLeft_toRightOf="@id/tvEmailt"/>

</androidx.constraintlayout.widget.ConstraintLayout>